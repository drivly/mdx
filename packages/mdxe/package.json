{
  "name": "mdxe",
  "version": "0.1.0",
  "description": "Zero-config CLI for serving Markdown and MDX files",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mdxe": "./bin/mdxe.js"
  },
  "files": [
    "bin",
    "dist",
    "src/config"
  ],
  "scripts": {
    "build": "tsc && chmod +x bin/mdxe.js",
    "dev": "tsc --watch",
    "lint": "eslint src bin",
    "check-types": "tsc --noEmit"
