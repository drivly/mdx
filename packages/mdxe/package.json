    "mdxui": "workspace:*",
    "next": "^15.3.0",
    "next-mdx-remote": "^5.0.0",
    "nextra": "^4.2.17",
    "nextra-theme-docs": "^4.2.17",
    "null-loader": "^4.0.1",
    "payload": "^2.32.2",
