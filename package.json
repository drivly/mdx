{
  "name": "mdx",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,mdx}\"",
    "check-types": "turbo run check-types",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.3",
    "prettier": "^3.5.3",
    "turbo": "^2.5.2",
    "typescript": "5.8.2",
    "vitest": "^1.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "printWidth": 160,
    "tabWidth": 2,
    "semi": false
  },
  "dependencies": {
    "date-fns": "^4.1.0"
  }
}
